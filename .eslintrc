{
    "plugins": ["react"],
    "env": {
        "es6": true,
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "ecmaFeatures": {
        "jsx": true,
        "arrowFunctions": true,
        "blockBindings": true,
        "classes": true,
        "defaultParams": true,
        "destructuring": true,
        "forOf": true,
        "generators": false,
        "modules": true,
        "objectLiteralComputedProperties": true,
        "objectLiteralDuplicateProperties": false,
        "objectLiteralShorthandMethods": true,
        "objectLiteralShorthandProperties": true,
        "restParams": true,
        "spread": true,
        "superInFunctions": true,
        "templateStrings": true

    },
    "rules": {
        "curly": 2,
        "eqeqeq": 2,
        "quotes": [2, "double", "avoid-escape"],
        "no-undef": 2,
        "no-use-before-define": [2, "nofunc"],
        "new-cap": 0,
        "no-caller": 2,
        "wrap-iife": 2,
        "indent": [2, 4],
        "no-trailing-spaces": 2
    }
}
